# Development Dockerfile with hot reload support
FROM node:20-alpine AS development

# Install dependencies for better-sqlite3 and curl for healthchecks
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    libc6-compat \
    curl

# Enable pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install all dependencies (including devDependencies for development)
# Note: --config.ignore-scripts=false allows native modules like better-sqlite3 to build
RUN pnpm install --frozen-lockfile --config.ignore-scripts=false

# Copy source code (will be overridden by volume mount in docker-compose.dev.yml)
COPY . .

# Expose the application port
EXPOSE 3000

# Start development server with hot reload
CMD ["pnpm", "run", "dev"]

