# Application Configuration
NODE_ENV=development
# Use NOTIFICATION_PORT for API port (used by main.ts)
NOTIFICATION_PORT=3001
LOG_LEVEL=info

# Authentication Configuration
API_KEY=your_secret_api_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# WAHA WhatsApp API Configuration
# For local dev (Turbo), WAHA runs in Docker at port 3002
WAHA_BASE_URL=http://localhost:3002
WAHA_DEFAULT_SESSION=default

# PostgreSQL Database Configuration
# For local development with Docker Compose:
DATABASE_URL=postgresql://chatwaha:chatwaha_secret@localhost:5432/chatwaha?schema=public

# PostgreSQL credentials (used by docker-compose)
POSTGRES_USER=chatwaha
POSTGRES_PASSWORD=chatwaha_secret
POSTGRES_DB=chatwaha
